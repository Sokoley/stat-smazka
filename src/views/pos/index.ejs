  <img id="imageModalImg" src="" alt="" style="max-width: 90%; max-height: 90%; object-fit: contain; border-radius: 8px;">
</div>

<!-- Upload Progress -->
<div id="uploadProgressContainer" class="upload-progress-container">
  <div>Загрузка фото...</div>
  <div class="progress-bar">
    <div class="progress-fill" id="progressFill"></div>
  </div>
