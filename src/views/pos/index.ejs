<div class="pos-container">
  <div class="pos-header">
    <h1>Остатки промо материалов</h1>
    <div id="dataSourceInfo" class="data-source-info"></div>
  </div>

  <div id="loadingContainer" class="loading-container">
    <div class="loading-spinner"></div>
    <p style="margin-top: 16px;">Загрузка данных...</p>
  </div>

  <div id="errorContainer" class="error-message" style="display: none;"></div>

  <div id="tableContainer" class="pos-table-container" style="display: none;">
    <div style="overflow-x: auto;">
      <table class="pos-table">
        <thead>
          <tr>
            <th>Фото</th>
            <th>Название</th>
            <th>Категория</th>
            <th class="total-header">Итого</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="tableBody">
        </tbody>
      </table>
    </div>
  </div>

  <div id="summaryBar" class="summary-bar" style="display: none;">
    <div class="summary-item"><strong id="totalItems">0</strong> позиций</div>
    <div class="summary-item">Всего единиц: <strong id="totalQuantity">0</strong></div>
    <div class="summary-item" id="updateInfo"></div>
  </div>
</div>

<!-- Details Modal -->
<div id="detailsModal" class="pos-modal">
  <div class="pos-modal-content">
    <div class="pos-modal-header">
      <h3 id="modalTitle">Детальная информация</h3>
    </div>
    <div class="pos-modal-body">
      <div id="productInfo" class="product-info"></div>
      <div class="warehouse-list-title">Остатки по складам:</div>
      <div id="warehouseList" class="warehouse-list"></div>
      <div id="totalDetails" class="total-details"></div>
      <button class="close-modal-btn" onclick="closeDetailsModal()">Закрыть</button>
    </div>
  </div>
</div>

<!-- Image Preview Modal -->
