<%- include('../layouts/main', { title, body: `
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Пользователи</h2>
      <a href="/admin/users/new" class="btn-primary">Добавить</a>
    </div>

    ${success ? `
      <div class="bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800 rounded-lg p-4">
        <p class="text-green-600 dark:text-green-400">${success}</p>
      </div>
    ` : ''}

    ${error ? `
      <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4">
        <p class="text-red-600 dark:text-red-400">${error}</p>
      </div>
    ` : ''}

    <div class="card overflow-hidden">
      <table class="w-full">
        <thead>
          <tr class="text-left text-sm text-gray-500 dark:text-gray-400 border-b border-gray-200 dark:border-gray-700">
            <th class="pb-3 px-4 font-medium">Пользователь</th>
            <th class="pb-3 px-4 font-medium">Роль</th>
            <th class="pb-3 px-4 font-medium">Статус</th>
            <th class="pb-3 px-4 font-medium">Создан</th>
            <th class="pb-3 px-4 font-medium text-right">Действия</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          ${users.map(u => `
            <tr>
              <td class="py-4 px-4">
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">${u.name || 'Без имени'}</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400">${u.email}</p>
                </div>
              </td>
              <td class="py-4 px-4">
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full ${u.is_admin ? 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'}">
                  ${u.is_admin ? 'Админ' : 'Пользователь'}
                </span>
              </td>
              <td class="py-4 px-4">
                <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full ${u.is_active ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' : 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400'}">
                  ${u.is_active ? 'Активен' : 'Неактивен'}
                </span>
              </td>
              <td class="py-4 px-4 text-sm text-gray-600 dark:text-gray-300">
                ${new Date(u.created_at).toLocaleDateString('ru-RU')}
              </td>
              <td class="py-4 px-4 text-right">
                <div class="flex items-center justify-end gap-2">
                  <a href="/admin/users/${u.id}/edit" class="text-blue-600 dark:text-blue-400 hover:underline text-sm">Изменить</a>
                  <form action="/admin/users/${u.id}/delete" method="POST" class="inline" onsubmit="return confirm('Удалить пользователя?')">
                    <button type="submit" class="text-red-600 dark:text-red-400 hover:underline text-sm">Удалить</button>
                  </form>
                </div>
              </td>
            </tr>
          `).join('')}
        </tbody>
      </table>
    </div>
  </div>
` }) %>
