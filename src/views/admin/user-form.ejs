<%- include('../layouts/main', { title, body: `
  <div class="max-w-2xl">
    <div class="mb-6">
      <a href="/admin/users" class="text-blue-600 dark:text-blue-400 hover:underline flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Назад к списку
      </a>
    </div>

    <div class="card">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6">${user && user.id ? 'Редактирование' : 'Новый пользователь'}</h2>

      ${errors.length > 0 ? `
        <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
          ${errors.map(e => `<p class="text-red-600 dark:text-red-400 text-sm">${e.msg}</p>`).join('')}
        </div>
      ` : ''}

      <form action="${user && user.id ? '/admin/users/' + user.id : '/admin/users'}" method="POST" class="space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Имя</label>
          <input type="text" id="name" name="name" value="${user ? user.name || '' : ''}" class="input-field" required>
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
          <input type="email" id="email" name="email" value="${user ? user.email || '' : ''}" class="input-field" required>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
            Пароль ${user && user.id ? '(оставьте пустым, чтобы не менять)' : ''}
          </label>
          <input type="password" id="password" name="password" class="input-field" ${user && user.id ? '' : 'required minlength="6"'}>
        </div>

        <div class="flex items-center gap-6">
          <label class="flex items-center gap-2 cursor-pointer">
            <input type="checkbox" name="is_admin" value="1" ${user && user.is_admin ? 'checked' : ''} class="w-4 h-4 rounded border-gray-300 dark:border-gray-600 text-blue-600 focus:ring-blue-500">
            <span class="text-sm text-gray-700 dark:text-gray-300">Администратор</span>
          </label>

          ${user && user.id ? `
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="is_active" value="1" ${user.is_active ? 'checked' : ''} class="w-4 h-4 rounded border-gray-300 dark:border-gray-600 text-blue-600 focus:ring-blue-500">
              <span class="text-sm text-gray-700 dark:text-gray-300">Активен</span>
            </label>
          ` : ''}
        </div>

        <div class="pt-4">
          <button type="submit" class="btn-primary">${user && user.id ? 'Сохранить' : 'Создать'}</button>
        </div>
      </form>
    </div>
  </div>
` }) %>
